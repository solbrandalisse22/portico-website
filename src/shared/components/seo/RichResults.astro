  DEFAULT: organizationSchema
}

let schema = pathname === '/UK' ? TYPES.UK : pathname === '/USA' ? TYPES.USA : TYPES.DEFAULT;


if (TYPE) {
  schema = TYPES[TYPE] || TYPES.DEFAULT;
}
---

<script type="application/ld+json" set:html={JSON.stringify(schema)} />
